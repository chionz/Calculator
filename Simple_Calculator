#This Programme is to develope a simple calculator that can:
#Make simple Addition
#Subtraction
#Multiplication
#Division

import math

#Defining Functions
def add():
    return a + b

def subtract():
    return a - b

def multiply():
    return a * b

def divide():
    return a / b

#Mode Select between complex and simple maths

def mode():
    print("Mode")
    print("1. Simple\n2. Complex")

    modeoperate = int(input("Choose Mode "))
    if modeoperate == 1:
        prntsimple()

    if modeoperate == 2:
        prntcomplex()

#User Mode Operation 1
def prntsimple():
    print("Select an Operation")
    print("1. Addition\n2. Subtraction\n3. Multiplication\n4. Division")

    global p
    p = int(input("Select an Operation "))
    opselect = (1, 2, 3, 4)
    if p not in opselect:
        print("Invalid Selection")
        return prntsimple()
    global a 
    a = float(input("Input you First Number "))
    global b
    b = float(input("Input you second Number "))
  
  # Simple Maths  
    if p == 1:
        print(add())
       
    if p == 2:
        print(subtract())

    if p == 3:
        print(multiply())

    if p == 4:
        print(divide())


#Complex Maths

def prntcomplex():
    print("Select a Operation")
    print("5. Square root\n6. Log base 10\n7. tan\n8. sin\n9. cos\n10. pi")

    op = int(input("Choose Operation "))
    entry =(5, 6, 7, 8, 9, 10)
    if op in entry:
     x = float(input("Input Figure for Calculation "))
    else:
        print("Invalid Selection")
        return prntcomplex()

    def square():
        return math.sqrt(x)

    def log():
      return math.log10(x)

    def tan():
        return math.tan(x)

    def sin():
        return math.sin(x)

    def cos():
        return math.cos(x)
    
    def pi():
        return math.pi

    if op == 5:
        print(square())

    if op == 6:
        print(log())
    
    if op == 7:
        print(tan())

    if op == 8:
        print(sin())

    if op == 9:
        print(cos())

    if op == 10:
        print(x * math.pi)

while True:
    mode()
   